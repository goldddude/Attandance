{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production"
    },
    "functions": {
        "api/index.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}